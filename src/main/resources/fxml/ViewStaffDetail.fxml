<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="za.co.openwindow.university.controller.ViewStaffDetailController"
            stylesheets="/styles/main.css"
            styleClass="content"
            prefHeight="400.0" prefWidth="600.0"
>
    <top>
        <fx:include source="MenuBar.fxml" fx:id="menuBar" />
    </top>

    <center>
        <GridPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
            </rowConstraints>


            <Label GridPane.columnIndex="0"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="0"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Staff Name:
            </Label>
            <Label fx:id="staffNameLabel"
                   GridPane.columnIndex="6"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="0"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Name
            </Label>

            <Label GridPane.columnIndex="0"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="1"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Number of subjects:
            </Label>
            <Label fx:id="numSubjectLabel"
                   GridPane.columnIndex="6"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="1"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                num subjects
            </Label>
            <Label GridPane.columnIndex="0"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="2"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Staff ID number:
            </Label>
            <Label fx:id="staffIDLabel"
                   GridPane.columnIndex="6"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="2"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Code
            </Label>
            <Button fx:id="editButton"
                    prefWidth="Infinity"
                    onAction="#edit"
                    GridPane.columnIndex="0"
                    GridPane.columnSpan="3"
                    GridPane.rowIndex="11"
                    GridPane.rowSpan="1"
                    styleClass="danger"
            >
                Edit
            </Button>
        </GridPane>

    </center>




</BorderPane>
