<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="content" stylesheets="/styles/main.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="za.co.openwindow.university.controller.ViewSubjectsController">
    <top>
        <fx:include fx:id="menuBar" source="MenuBar.fxml" />
    </top>

    <center>
        <AnchorPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label styleClass="subjectText" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10">
                Please select one of the subjects below:
            </Label>

            <VBox fx:id="subjectsVBox" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="40">
            </VBox>
            <Button fx:id="newSubjectButton" layoutX="20.0" layoutY="200.0" maxWidth="Infinity" onAction="#switchToNewSubjectScene" styleClass="newSubjectButton" GridPane.columnIndex="5" GridPane.columnSpan="3" GridPane.rowIndex="11" GridPane.rowSpan="1">
                New Subject
            </Button>

        </AnchorPane>

    </center>

</BorderPane>
