<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="za.co.openwindow.university.controller.EditStaffController"
            stylesheets="/styles/main.css"
            styleClass="content"
            prefHeight="400.0" prefWidth="600.0"
>
    <top>
        <fx:include source="MenuBar.fxml" fx:id="menuBar" />
    </top>

    <center>
        <GridPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
                <ColumnConstraints percentWidth="8.3" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
                <RowConstraints percentHeight="8.3" />
            </rowConstraints>


            <Label GridPane.columnIndex="0"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="0"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Staff Name:
            </Label>
            <TextField fx:id="subjectTextField"
                       GridPane.columnIndex="6"
                       GridPane.columnSpan="6"
                       GridPane.rowIndex="0"
                       GridPane.rowSpan="1"
            >

            </TextField>

            <Label GridPane.columnIndex="0"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="2"
                   GridPane.rowSpan="1"
                   styleClass="subjectText"
            >
                Staff ID number:
            </Label>
            <TextField fx:id="subjectTextField3"
                       GridPane.columnIndex="6"
                       GridPane.columnSpan="6"
                       GridPane.rowIndex="2"
                       GridPane.rowSpan="1"
            >

            </TextField>
            <Button fx:id="doneButton"
                    prefWidth="Infinity"
                    GridPane.columnIndex="8"
                    GridPane.columnSpan="4"
                    GridPane.rowIndex="11"
                    GridPane.rowSpan="1"
                    onAction="#done"
            >
                Done
            </Button>
        </GridPane>

    </center>




</BorderPane>
